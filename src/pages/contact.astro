---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact">
	<div class="flex flex-row">
		<div class="basis-1/2 flex flex-col justify-around">
			<!-- Hours table -->
			<div>
				<table>
					<tr>
						<th>Week Day</th>
						<th>Hours</th>
					</tr>

					<!-- Sunday -->
					<tr>
						<td>Sunday</td>
						<td>11:00 AM - 3:00 PM</td>
					</tr>

					<!-- Monday -->
					<tr>
						<td>Monday</td>
						<td>CLOSED</td>
					</tr>

					<!-- Tuesday -->
					<tr>
						<td>Tuesday</td>
						<td>CLOSED</td>
					</tr>

					<!-- Wednesday -->
					<tr>
						<td>Wednesday</td>
						<td>11:00 AM - 3:00 PM</td>
					</tr>

					<!-- Thursday -->
					<tr>
						<td>Thursday</td>
						<td>CLOSED</td>
					</tr>

					<!-- Friday -->
					<tr>
						<td>Friday</td>
						<td>CLOSED</td>
					</tr>

					<!-- Saturady -->
					<tr>
						<td>Saturady</td>
						<td>11:00 AM - 3:00 PM</td>
					</tr>
				</table>

				<div class="pt-2">
					<p class="font-bold italic">5-stand Saturdays & Sundays ONLY</p>
				</div>
			</div>

			<!-- Contact info -->
			<div class="flex flex-col space-y-3">
				<div><b>Phone:</b> (519) 736-2557</div>
				<div><b>Clubhouse:</b> 9583 Concession Rd 9, Harrow, ON N0R 1G0</div>
				<div>
					<p><b>P.O. Box</b></p>
					<p>Amherstburg Target Sports</p>
					<p>66 Richmond Street, P.O. Box 182</p>
					<p>Amherstburg, Ontario N9V 2Z4</p>
				</div>
			</div>
		</div>

		<div class="basis-1/2">
			<!-- Location -->
			<div>
				<iframe
					src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d47384.40772575632!2d-83.03696253265811!3d42.07478946046655!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x883b2df955555555%3A0x1c1abb0e258d1d89!2sAmherstburg%20Target%20Sports!5e0!3m2!1sen!2sca!4v1703307627489!5m2!1sen!2sca"
					width="600"
					height="450"
					style="border:0;"
					allowfullscreen=""
					loading="lazy"
					referrerpolicy="no-referrer-when-downgrade"></iframe>
			</div>
		</div>
	</div>
</Layout>

<style lang="scss">
	table tr {
		text-align: left;
		padding-right: 50px;
	}

	table tr td {
		padding-right: 50px;
	}
</style>
